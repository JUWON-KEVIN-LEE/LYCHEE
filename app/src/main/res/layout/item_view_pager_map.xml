<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/background_rectangle_top_corner_rounded_white">

        <ImageView
            android:id="@+id/mapRecentCategoryImageView"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toTopOf="@+id/mapDetailShowTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@color/LightGrey" />

        <TextView
            android:id="@+id/mapRecentShopNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="스타벅스"
            android:textColor="@android:color/black"
            android:textStyle="normal"
            app:layout_constraintBottom_toTopOf="@+id/mapRecentDateTextView"
            app:layout_constraintEnd_toStartOf="@+id/mapRecentPriceTextView"
            app:layout_constraintStart_toEndOf="@+id/mapRecentCategoryImageView"
            app:layout_constraintTop_toTopOf="@+id/mapRecentCategoryImageView"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/mapRecentDateTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="2018년 4월 28일"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="@+id/mapRecentCategoryImageView"
            app:layout_constraintEnd_toStartOf="@+id/mapRecentCardTextView"
            app:layout_constraintStart_toStartOf="@+id/mapRecentShopNameTextView"
            app:layout_constraintTop_toBottomOf="@+id/mapRecentShopNameTextView" />

        <TextView
            android:id="@+id/mapRecentPriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="144,800원"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/mapRecentShopNameTextView" />

        <TextView
            android:id="@+id/mapRecentCardTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="삼성카드"
            app:layout_constraintBottom_toBottomOf="@+id/mapRecentDateTextView"
            app:layout_constraintEnd_toEndOf="@+id/mapRecentPriceTextView" />

        <TextView
            android:id="@+id/mapDetailShowTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorSuperLightGrey"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="상세항목 보기"
            android:textColor="@android:color/black"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </android.support.constraint.ConstraintLayout>
</layout>